---
interface Props {
	links : Link[]
}
export interface Link {
	title : string,
	href : string,
}
const {links} = Astro.props;

---

	<header class="shadow-sm w-full flex flex-row gap-4 bg-white text-black p-3 justify-stretch top-0 sticky z-50 text-lg">
			<div class="grow hidden sm:block">
				<button class="min-h-4 p-3 rounded-lg hover:text-accent transition-colors"><a href="/">Chayce Ross</a></button>
			</div>		
			<div class="flex flex-row gap-4 justify-center sm:justify-stretch align-middle w-full sm:w-auto">
				{
					links.map(({title, href}) => (
				<a href={href}  class="min-h-4 p-3 rounded-lg hover:bg-slate-100">
					<button  type="button">{title}</button>
				</a>
					))
				}
				<!-- <a href="#experience"  class="min-h-4 p-3 rounded-lg hover:bg-slate-100">
					<button  type="button">Experience</button>
				</a> -->
			</div>
	</header>